<div class="card mb-3">
  <h5>{{username}}{{OurMessege}}</h5>
  {{#if group.image}}
    <img
      class="group-card-img"
      src="{{group.image}}"
      alt={{group.name}}
    />
  {{else}}
    <img
      class="group-card-img"
      src="/images/default.png"
      alt={{group.name}}
    />
  {{/if}}
  <div class="card-body">
    <h2 class="card-title">{{group.name}}</h2>
    <p class="card-text">{{group.description}}</p>


    <div class='card-text events-div'>
      <hr/>
      <h4>Events</h4>
      <div style="display: flex; flex-flow: row wrap;">
      {{#each group.events}}
        {{> eventPartial this}}
      {{/each}}
      </div>
    </div>

    <div class='card-text'>
      <hr/>
      <h4>Group Members</h4>
      <ul style="display: flex; flex-flow:row wrap;">
        {{#each group.members}}
          <li class="btn btn-outline-success" style="margin:5px">
            {{this.username}}
          </li>
        {{/each}}
      </ul>
    </div>

    <div >
      <hr/>
      <form
        action='/groups/{{group._id}}/add'
        method='POST'
        >
        <button type="submit" class="btn btn-primary">
          Join this group
        </button>
      </form>

      {{#if isAdmin}}
      <h4>Admin Actions</h4>
      <div class="admin-actions">
        <form 
        action="/groups/{{group._id}}/events/new"
        method='GET'
        >
          <button type="submit" class="btn btn-primary">
            Create Event
          </button>
        </form>

        <form 
          action="/groups/{{group._id}}/edit"
          method='GET'
          >
          <button type="submit" class="btn btn-primary">
            Edit Group       
          </button>
        </form>

        <form
          action="/groups/{{group._id}}/delete" 
          method="POST">
          <button type="submit" class="btn btn-primary">
            Delete Group ‚ùå
          </button>
        </form>
      </div>
      {{/if}}
    </div>
  </div>
</div>
